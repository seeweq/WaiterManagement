<body>

<div class="container">
    <div class="row">
<h1>Welcome waiter</h1>

<form onsubmit="/home/sivu/WaiterManagement/src/main/resources/templates/selecteddays.handlebars" method="POST" action="/schedules">


    <div>
        <p>Select Name:</p>
    <select id="waiter" name="waiter">
        {{#each waiters}}
        <option value="{{waiter}}">{{waiter}}</option>
        {{/each}}
    </select>
    </div>




    <p>Select 3 shift days:</p>

    <div>
        <div>

                {{#each days}}

                    <div>
                        <input type="checkbox" name="day" id="mon" value="{{id}}"> <label for="mon">{{day}}</label>
                    </div>
                {{/each}}

        </div>
        <input type="submit" name="submit" value="Submit"/>
    </div>
</form>




    </div>
